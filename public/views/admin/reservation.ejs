<script src="../../AdminLTE/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

</head>
<body class="hold-transition sidebar-mini layout-fixed ">
	<div class="wrapper">

		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
				</li>
			</ul>



		</nav>
		<!-- /.navbar -->
		<!-- Main Sidebar Container -->
        <%- include('../../partials/admin/sidebar.ejs') %>

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<!-- Content Header (Page header) -->
			<div class="content-header">
				<div class="container-fluid">
					<div class="row mb-2">
						<div class="col-sm-3">
							<h1 class="m-0 text-dark"></h1>
						</div>
						<div class="col-sm-9">

							<!-- <ol class="breadcrumb float-sm-right">
						  <li class="breadcrumb-item"><a href="#">Home</a></li>
						  <li class="breadcrumb-item active">Dashboard v1</li>
						</ol> -->
						</div>
					</div>
		

				</div>
			</div>
			<!-- /.content-header -->
			<!-- Main content -->
			<section class="content">
				<div class="container-fluid">
       
				<div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-warehouse"></i>   Reservation</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                   <th>Customer</th>
                  <th>Room Type</th>
                  <th>Qty</th>
                  <th>Check-In</th>
                  <th>Check-Out</th>
                  <th>Phone</th>
                  <th>Posted</th>
                  <th>Status</th>
                  <th>Posted At</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                  <% if(data.length) { %>
                    <% for(var i = 0; i< data.length; i++) { %>
                  

                    <tr>
                        <td >
                          <%= data[i].customer_name %>
                        </td>
                        <td>
                            <%= data[i].room_size_name %>
                        </td>
                        <td>
                            <%= data[i].room_qty %>
                        </td>

                        <td>
                            <%= data[i].check_in_date %>
                        </td>
                        <td>
                            <%= data[i].check_out_date %>
                        </td>
                      
                        <td>
                            <%= data[i].phone_num %>
                        </td>
                        <td>
                            <%= data[i].address %>
                        </td>
                        <td>
                            <%= data[i].status %>
                        </td>
                        <td>
                            <%= data[i].date_posted %>
                        </td>
                        <td>
                            <div class="text-center">
                            <input id="room_type_id" type="hidden" value="<%= data[i].room_type_id %>">
                            <input id="customer_id"  type="hidden" value="<%= data[i].customer_id %>">
                            <input id="reservation_id"  type="hidden" value="<%= data[i].reservation_id %>">
                            <% if(data[i].status != "Approved") {%>
                              <a class="text-success approve" id="approve" ><i class="fas fa-check"></i> </a> 
                            <%  }%>
                          </div>
                        </td>
                       
                    </tr>

                  <% } %>
                <% } %>
                </tbody>
         
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->



          <!-- /.card -->
        </div>
				</div><!-- /.container-fluid -->
			</section>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
		<footer class="main-footer text-pink text-center">



		</footer>


		<div class="modal fade" id="modal-item">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"><i class="fas fa-warehouse"></i> Create New Item</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="item_form" enctype="multipart/form-data">
            <label for="">Item Img</label>
            <div class="input-group">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id="exampleInputFile"  accept="image/*" name="image" required>
                        <label class="custom-file-label" for="exampleInputFile">  </label>
                      </div>
                      <div class="input-group-append">
                        <span class="input-group-text" id="">Upload</span>
                      </div>
                    </div>
            <label for="">Item Name</label>
            <input type="text" class="form-control" placeholder="Enter Item Name ..." name="name" required>
            <label for="">Item Description</label>
            <input type="text" class="form-control" placeholder="Enter Item Description ..." name="desc" >
            <label for="">Item Qty</label>
            <input type="number" class="form-control" placeholder="Enter Item Qty ..." name="qty" required>
            <label for="">Item price</label>
            <input type="number" class="form-control" placeholder="Enter Item price ..." name="price" required>
           
          
            <div class="modal-footer ">
              
              <button type="submit" class="btn btn-primary float-right"><i class="fas fa-save"></i> Save Changes</button>
            </form>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>

		
	</div>

		<div class="modal fade" id="modal-item-update">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"><i class="fas fa-warehouse"></i> Update Item</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="item_form_update" enctype="multipart/form-data">
            <label for="">Item Img</label>
            <div class="input-group">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id="exampleInputFile"  accept="image/*" name="image" required>
                        <label class="custom-file-label" for="exampleInputFile">  </label>
                      </div>
                      <div class="input-group-append">
                        <span class="input-group-text" id="">Upload</span>
                      </div>
                    </div>
            <label for="">Item Name</label>
            <input type="text" class="form-control" placeholder="Enter Item Name ..." name="name" id="name" required>
            <label for="">Item Description</label>
            <input type="text" class="form-control" placeholder="Enter Item Description ..." name="desc" id="desc" >
            <label for="">Item Qty</label>
            <input type="number" class="form-control" placeholder="Enter Item Qty ..." name="qty" id="qty" required>
            <label for="">Item price</label>
            <input type="number" class="form-control" placeholder="Enter Item price ..." name="price" id="price" required>
           
            <input type="hidden" value="" id="item-update-id" name="item-update-id">
            <input type="hidden" value="" name="path" id="path">
            <div class="modal-footer ">
              
              <button type="submit" class="btn btn-primary float-right"><i class="fas fa-save"></i> Save Changes</button>
            </form>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>

		
	</div>
	<!-- ./wrapper -->
<script>

bsCustomFileInput.init();

	 $("#example2").DataTable({
      "responsive": true,
	  "autoWidth": false,
	  "order":[]
  });


  $(document).on('click', 'a.approve', function (e) {
    e.preventDefault();
  if (confirm("Sure Want to Approve  Reservation?")) {
               // let room_type_id = $(this).siblings('#room_type_id').val();
                let reservation_id = $(this).siblings('#reservation_id').val();
                let customer_id = $(this).siblings('#customer_id').val();
                    
            $.ajax({
              type: "POST",
                url:"/reservation/approve",
                data: {reservation_id:reservation_id,customer_id,customer_id},
                dataType: "json",
                success: function (res) {
                    console.log(res)
                    if(res.success){
                        alert("Successfully Approved Reservation\nGo to Check in page to see Details");
                        window.location.reload();
                    }else{
                        console.log(res);
                    }
                }
            });
         }

        })


	</script>
</body>
</html>
