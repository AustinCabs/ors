
<!DOCTYPE html>
<html>
    <head>
    <%- include('../../partials/admin/header.ejs') %>
</head>
<body class="hold-transition sidebar-mini layout-fixed ">
	<div class="wrapper">

		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
				</li>
			</ul>



		</nav>
		<!-- /.navbar -->
		<!-- Main Sidebar Container -->
        <%- include('../../partials/admin/sidebar.ejs') %>

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<!-- Content Header (Page header) -->
			<div class="content-header">
				<div class="container-fluid">
					<div class="row mb-2">
						<div class="col-sm-3">
							<h1 class="m-0 text-dark"></h1>
						</div>
						<div class="col-sm-9">

							<!-- <ol class="breadcrumb float-sm-right">
						  <li class="breadcrumb-item"><a href="#">Home</a></li>
						  <li class="breadcrumb-item active">Dashboard v1</li>
						</ol> -->
						</div>
					</div>
		

				</div>
			</div>
			<!-- /.content-header -->
			<!-- Main content -->
			<section class="content">
				<div class="container-fluid">
        <div class="d-flex justify-content-end mb-2">
					<a href="" class="btn btn-success "  data-toggle="modal" data-target="#modal-item"><i class="fas fa-plus"></i> Create Room Size</a>
				</div>
				<div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-bed"></i>   Room Sizes</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                   <th>Img</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Rate</th>
                  <th>Action</th>
                  
                </tr>
                </thead>
                <tbody>
                    <% if(data.length) { %>
                        <% for(var i = 0; i< data.length; i++) { %>
                      

                        <tr>
                            <td class="text-center">
                            <img src="<%= `/img/${data[i].pic}` %>" alt="..." class="img-thumbnail" style=" height: 100px; width: 100px;">
                            </td>
                            <td>
                                <%= data[i].room_size_name %>
                            </td>
                            <td>
                                <%= data[i].description %>
                            </td>

                            <td>
                                <%= data[i].rate %>
                            </td>
                            <td>
                                <div class="text-center">
                                <input id="id" name="id" type="hidden" value="<%= data[i].room_type_id %>">
                                <a class="text-info edit" id="edit" href="room-size-update/<%= data[i].room_type_id %>"><i class="fas fa-pencil-alt"></i> </a> 
                                <a class="text-danger remove" id="remove" ><i class="fas fa-trash-alt"></i> </a>
                                </div>
                            </td>
                           
                        </tr>

                      <% } %>
                    <% } %>
                </tbody>
         
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->



          <!-- /.card -->
        </div>
				</div><!-- /.container-fluid -->
			</section>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
		<footer class="main-footer text-pink text-center">



		</footer>


		<div class="modal fade" id="modal-item">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"><i class="fas fa-bed"></i> Create New Room Size</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="room_size_form" enctype="multipart/form-data">
            <label for="">Room Size Img</label>
            <div class="input-group">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id=""  accept="image/*" name="image" required>
                        <label class="custom-file-label" for="exampleInputFile">  </label>
                      </div>
                      <div class="input-group-append">
                        <span class="input-group-text" id="">Upload</span>
                      </div>
                    </div>
            <label for="">Name</label>
            <input type="text" class="form-control" placeholder="Enter  Name ..." name="name" required>
            <label for="">Description</label>
            <textarea id="" class="form-control" rows="3" name="desc" ></textarea>
            <label for="">Rate</label>
            <input type="number" class="form-control" placeholder="Enter  Rate ..." name="rate" required>
           
          
            <div class="modal-footer ">
              
              <button type="submit" class="btn btn-primary float-right"><i class="fas fa-save"></i> Save Changes</button>
            </form>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>

		
	</div>

		<div class="modal fade" id="modal-item-update">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"><i class="fas fa-warehouse"></i> Update Item</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="item_form_update" enctype="multipart/form-data">
            <label for="">Room size Img</label>
            <div class="input-group">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id=""  accept="image/*" name="image" required>
                        <label class="custom-file-label" for="exampleInputFile">  </label>
                      </div>
                      <div class="input-group-append">
                        <span class="input-group-text" id="">Upload</span>
                      </div>
                    </div>
            <label for="">Description</label>
            <input type="text" class="form-control" placeholder="Enter Item Name ..." name="name" id="name" required>
            <label for="">Rate</label>
            <input type="text" class="form-control" placeholder="Enter Item Description ..." name="desc" id="desc" >
            <label for="">Item Qty</label>
            <input type="number" class="form-control" placeholder="Enter Item Qty ..." name="qty" id="qty" required>
            <label for="">Item price</label>
            <input type="number" class="form-control" placeholder="Enter Item price ..." name="price" id="price" required>
           
            <input type="hidden" value="" id="item-update-id" name="item-update-id">
            <input type="hidden" value="" name="path" id="path">
            <div class="modal-footer ">
              
              <button type="submit" class="btn btn-primary float-right"><i class="fas fa-save"></i> Save Changes</button>
            </form>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>

		
	</div>
	<!-- ./wrapper -->
<script>

bsCustomFileInput.init();

$("#example2").DataTable({
      "responsive": true,
	  "autoWidth": false,
	  "order":[]
  });

    $("#room_size_form").submit(function (e) { 
        e.preventDefault();
        
        $.ajax({
            url:"/room-size/create",
            type: "POST",
            data: new FormData(this),
            dataType: "json",
            contentType: false,
            cache: false,
            processData:false,
            success: function (res) {
                console.log(res)
                if(res.success){
                    alert("Room Size Successfully Saved !");
                    window.location.reload();
                }else{
                    console.log(res);
                }
            }
        });

    });

    $(document).on('click', 'a.remove', function (e) {
          if (confirm("Sure Want to Remove Room Size ??")) {
            let id = $(this).siblings('#id').val();
                 
        $.ajax({
          type: "POST",
            url:"/admin/room-size-delete",
            data: {id:id},
            dataType: "json",
            success: function (res) {
                console.log(res)
                if(res.success){
                    alert("Successfully Room Size Remove !");
                    window.location.reload();
                }else{
                    console.log(res);
                }
            }
        });
          }
        })
	</script>
</body>
</html>
