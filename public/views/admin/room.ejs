
<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/admin/header.ejs') %>
</head>
<body class="hold-transition sidebar-mini layout-fixed ">
	<div class="wrapper">

		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
				</li>
			</ul>



		</nav>
		<!-- /.navbar -->
		<!-- Main Sidebar Container -->
        <%- include('../../partials/admin/sidebar.ejs') %>

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<!-- Content Header (Page header) -->
			<div class="content-header">
				<div class="container-fluid">
					<div class="row mb-2">
						<div class="col-sm-3">
							<h1 class="m-0 text-dark"></h1>
						</div>
						<div class="col-sm-9">

							<!-- <ol class="breadcrumb float-sm-right">
						  <li class="breadcrumb-item"><a href="#">Home</a></li>
						  <li class="breadcrumb-item active">Dashboard v1</li>
						</ol> -->
						</div>
					</div>
		

				</div>
			</div>
			<!-- /.content-header -->
			<!-- Main content -->
			<section class="content">
				<div class="container-fluid">
        <div class="d-flex justify-content-end mb-2">
					<a href="" class="btn btn-success "  data-toggle="modal" data-target="#modal-item"><i class="fas fa-bed"></i> Create Room</a>
				</div>
				<div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-bed"></i>  Rooms</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>Room #</th>
                  <th>Room Size</th>
                  <th>Description</th>
                  <th>Rate</th>
                  <th>Status</th>
                  <!-- <th>Action</th> -->
                </tr>
                </thead>
                <tbody>
                  <% if(data_table.length) { %>
                    <% for(var i = 0; i< data_table.length; i++) { %>
                  

                    <tr>
                      <td>
                        <%= "RM" + data_table[i].room_id %>
                      </td>
                        <td>
                            <%= data_table[i].room_size_name %>
                        </td>
                        <td>
                            <%= data_table[i].description %>
                        </td>

                        <td>
                            <%= data_table[i].rate %>
                        </td>
                        
                        <% if (data_table[i].is_available) {%>
                          <td>
                            <span class="badge bg-success">available</span>
                          </td>
                        <% } else {%>
                        <td>
                          <span class="badge bg-danger">un-available</span>
                        </td>
                        <% } %>
                       
                       
                        <!-- <td class="text-center">
                        <input type="hidden" value="<%= data_table[i].room_id %>" id="id">
                        <a href="" class="text-success edit"><i class="fa fa-edit"></i></a> 
                        <a href="" class="text-danger delete"><i class="fa fa-trash"></i></a> 
                        </td> -->
                       
                    </tr>

                  <% } %>
                <% } %>
         
                </tbody>
         
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->



          <!-- /.card -->
        </div>
				</div><!-- /.container-fluid -->
			</section>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
		<footer class="main-footer text-pink text-center">



		</footer>


		<div class="modal fade" id="modal-item">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"><i class="fas fa-bed"></i> Create Room</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
            <form id="room_form" >

            <label for="">Room size</label>
            <select name="room_size" id="room_size" class="form-control" required>
              <option value=""></option>
              <% if(data_select.length) { %>
                <% for(var i = 0; i< data_select.length; i++) { %>
                 <option value="<%= data_select[i].room_type_id %>"><%= data_select[i].room_size_name %></option>
                  <%}%>
              <%}%>
            </select>
            <label for="">Room Quantity</label>
            <input type="number" name="room_qty" id="room_qty" class="form-control" required>
           
          
            <div class="modal-footer ">
              
              <button type="submit" class="btn btn-primary float-right"><i class="fas fa-save"></i> Save Changes</button>
            </form>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>

		
	</div>

		<div class="modal fade" id="modal-item-update">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"><i class="fas fa-warehouse"></i> Update Item</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="item_form_update" enctype="multipart/form-data">
            <label for="">Item Img</label>
            <div class="input-group">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id="exampleInputFile"  accept="image/*" name="image" required>
                        <label class="custom-file-label" for="exampleInputFile">  </label>
                      </div>
                      <div class="input-group-append">
                        <span class="input-group-text" id="">Upload</span>
                      </div>
                    </div>
            <label for="">Item Name</label>
            <input type="text" class="form-control" placeholder="Enter Item Name ..." name="name" id="name" required>
            <label for="">Item Description</label>
            <input type="text" class="form-control" placeholder="Enter Item Description ..." name="desc" id="desc" >
            <label for="">Item Qty</label>
            <input type="number" class="form-control" placeholder="Enter Item Qty ..." name="qty" id="qty" required>
            <label for="">Item price</label>
            <input type="number" class="form-control" placeholder="Enter Item price ..." name="price" id="price" required>
           
            <input type="hidden" value="" id="item-update-id" name="item-update-id">
            <input type="hidden" value="" name="path" id="path">
            <div class="modal-footer ">
              
              <button type="submit" class="btn btn-primary float-right"><i class="fas fa-save"></i> Save Changes</button>
            </form>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>

		
	</div>
	<!-- ./wrapper -->
<script>

	 $("#example2").DataTable({
      "responsive": true,
	  "autoWidth": false,
	  "order":[]
  });

  $("#room_form").submit(function (e) { 
    e.preventDefault();
    let form = $(this);
    if (confirm("Sure want to create new Room ?")) {
        
      $.ajax({
          type: "POST",
          url: "/room/create",
          data: form.serialize(),
          dataType: "json",
          success: function (res) {
            
            if (res.success) {
              alert("Room Successfully Saved !");
              location.reload();
            } else {
              
            }
            
          }
        });

    } else {
      
    } 

    
  });
	</script>
</body>
</html>
