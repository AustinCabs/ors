<script>

bsCustomFileInput.init();

$("#example2").DataTable({
      "responsive": true,
	  "autoWidth": false,
	  "order":[]
  });

    $("#room_size_form").submit(function (e) { 
        e.preventDefault();
        let form = $(this);
        if (confirm("Sure want to Check out Customer?")) {
          
          $.ajax({
            url:"/check-out/save",
            type: "POST",
            data: form.serialize(),
            dataType: "json",
            success: function (res) {
              console.log(res)
                if(res.success){
                    alert("Customer Successfully Paid !");
                    location.href="/admin/checked-in";
                  }else{
                    console.log(res);
                  }
                }
              });
            }
    });
	</script>
