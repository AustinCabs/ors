
<!DOCTYPE html>
<html>
    <head>
    <%- include('../../partials/admin/header.ejs') %>
</head>
<body class="hold-transition sidebar-mini layout-fixed ">
	<div class="wrapper">

		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
				</li>
			</ul>



		</nav>
		<!-- /.navbar -->
		<!-- Main Sidebar Container -->
        <%- include('../../partials/admin/sidebar.ejs') %>

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<!-- Content Header (Page header) -->
			<div class="content-header">
				<div class="container-fluid">
					<div class="row mb-2">
						<div class="col-sm-3">
							<h1 class="m-0 text-dark"></h1>
						</div>
						<div class="col-sm-9">

							<!-- <ol class="breadcrumb float-sm-right">
						  <li class="breadcrumb-item"><a href="#">Home</a></li>
						  <li class="breadcrumb-item active">Dashboard v1</li>
						</ol> -->
						</div>
					</div>
		

				</div>
			</div>
			<!-- /.content-header -->
			<!-- Main content -->
			<section class="content">
				<div class="container-fluid">
  
        <div class="row d-flex justify-content-center">
          <div class="col-md-6">
              <div class="card">
               
                  <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-bed"></i>    Room Sizes Update</h3>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <form id="room_size_form" enctype="multipart/form-data">

                      <% console.log(data) %> 
                     
                      <div class="text-center">
                        <img src="<%= `/img/${data[0].pic}` %>" alt="..." class="img-thumbnail" style=" height: 200px; width: 200px;">
                      </div>
                      <input type="hidden" name="id" value="<%=data[0].room_type_id%>">
                      <label for="">Room Size Img</label>
                      <div class="input-group">
                                <div class="custom-file">
                                  <input type="file" class="custom-file-input" id="exampleInputFile"  accept="image/*" name="image"  required>
                                  <label class="custom-file-label" for="exampleInputFile">  </label>
                                </div>
                                <div class="input-group-append">
                                  <span class="input-group-text" id="">Upload</span>
                                </div>
                              </div>
                      <label for="">Name</label>
                      <input type="text" class="form-control" placeholder="Enter  Name ..." name="name" value="<%= data[0].room_size_name %> " required>
                      <label for="">Description</label>
                      <textarea id="" class="form-control" rows="3" name="desc" ><%= data[0].description %></textarea>
                      <label for="">Rate</label>
                      <input type="number" class="form-control" placeholder="Enter  Rate ..." name="rate" required value="<%= data[0].rate %>">
                     
                    
                      <div class="modal-footer ">
                        
                        <button type="submit" class="btn btn-primary float-right"><i class="fas fa-save"></i> Save Changes</button>
                      </form>
                  </div>
                  <!-- /.card-body -->
                </div>
          </div>
        </div>
          <!-- /.card -->



          <!-- /.card -->
        </div>
				</div><!-- /.container-fluid -->
			</section>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
		<footer class="main-footer text-pink text-center">



		</footer>


		
	</div>

		
	</div>
	<!-- ./wrapper -->
<script>

bsCustomFileInput.init();

$("#example2").DataTable({
      "responsive": true,
	  "autoWidth": false,
	  "order":[]
  });

    $("#room_size_form").submit(function (e) { 
        e.preventDefault();
        
        $.ajax({
            url:"/admin/room-size-update-save",
            type: "POST",
            data: new FormData(this),
            dataType: "json",
            contentType: false,
            cache: false,
            processData:false,
            success: function (res) {
                console.log(res)
                if(res.success){
                    alert("Room Size Successfully Updated !");
                    location.href="/admin/room-size";
                }else{
                    console.log(res);
                }
            }
        });
    });
	</script>
</body>
</html>
